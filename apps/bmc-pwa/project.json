{
  "name": "bmc-pwa",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/bmc-pwa/src",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/bmc-pwa"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "bmc-pwa:build",
        "port": 3001
      },
      "configurations": {
        "development": {
          "buildTarget": "bmc-pwa:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "bmc-pwa:build:production",
          "hmr": false
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Tests temporarily disabled for bmc-pwa - TODO: Configure Jest'"
      }
    }
  },
  "tags": ["pwa", "bmc"]
}