{
  "name": "idea-cards-pwa",
  "root": "apps/idea-cards-pwa",
  "sourceRoot": "apps/idea-cards-pwa/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/idea-cards-pwa"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "port": 3002
      },
      "configurations": {
        "development": {
          "buildTarget": "idea-cards-pwa:build:development",
          "hmr": true
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/idea-cards-pwa/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "command": "echo 'Linting temporarily disabled for idea-cards-pwa - TODO: Fix ESLint config'"
      }
    }
  },
  "tags": ["scope:app", "type:app"]
}