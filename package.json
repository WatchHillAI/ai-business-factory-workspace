{
  "name": "@ai-business-factory/workspace",
  "version": "1.0.0",
  "description": "Shared PWA workspace for AI Business Factory applications",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "nx run-many --target=serve --all --parallel",
    "dev:bmc": "nx serve bmc-pwa",
    "dev:ideas": "nx serve idea-cards-pwa",
    "build": "nx run-many --target=build --all",
    "build:bmc-pwa": "nx build bmc-pwa",
    "build:idea-cards-pwa": "nx build idea-cards-pwa",
    "build:ui-components": "nx build ui-components",
    "test": "nx run-many --target=test --all",
    "lint": "echo 'Workspace linting temporarily disabled - TODO: Fix ESLint config'",
    "typecheck": "nx run-many --target=typecheck --all",
    "clean": "nx reset && rm -rf dist/ && rm -rf .nx/",
    "preview": "nx run-many --target=preview --all",
    "preview:bmc": "nx preview bmc-pwa",
    "preview:ideas": "nx preview idea-cards-pwa"
  },
  "keywords": [
    "pwa",
    "business-model-canvas",
    "idea-discovery",
    "ai-powered",
    "serverless",
    "nx-workspace",
    "react",
    "typescript"
  ],
  "author": "WatchHill AI",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@nx/eslint": "^21.2.4",
    "@nx/jest": "^21.2.4",
    "@nx/react": "^21.2.4",
    "@nx/vite": "^21.2.4",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.31.0",
    "jsdom": "^26.1.0",
    "nx": "21.2.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WatchHillAI/ai-business-factory-workspace.git"
  },
  "nx": {}
}
